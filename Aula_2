#include <stdio.h>
#include <string.h>

// Desafio: Buscar por uma palavra que apareça no logradouro (strnstr)

typedef struct _Endereco Endereco;

struct _Endereco
{
	char logradouro[72];
	char bairro[72];
	char cidade[72];
	char uf[72];
	char sigla[2];
	char cep[8];
	char lixo[2]; // Ao Espaço no final da linha + quebra de linha
};

int main(int argc, char**argv)
{
	FILE *f;
	Endereco e;
	int qt;
	int c;

	if(argc != 2)
	{
		fprintf(stderr, "USO: %s [LOGRADOURO]", argv[0]);
		return 1;
	}

	c = 0;
	printf("Tamanho da Estrutura: %ld\n\n", sizeof(Endereco));
	f = fopen("cep.dat","rb");
	qt = fread(&e,sizeof(Endereco),1,f);
	while(qt > 0)
	{
		c++;
		if(strstr(argv[1],e.logradouro)==0) // argv[1] == e.cep Dica2 -> strnstr
		{
			printf("%.72s\n%.72s\n%.72s\n%.72s\n%.2s\n%.8s\n",e.logradouro,e.bairro,e.cidade,e.uf,e.sigla,e.cep);
			 // Dica 1 -> Nao Tem break. Precisa procurar todos
		}
		qt = fread(&e,sizeof(Endereco),1,f);		
	}
	printf("Total Lido: %d\n", c);
	fclose(f);
}

// argv[1] < e.cep  => strcmp(argv[1],e.cep) < 0
// argv[1] > e.cep  => strcmp(argv[1],e.cep) > 0
// argv[1] == e.cep  => strcmp(argv[1],e.cep) == 0



